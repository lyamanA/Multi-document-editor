<Window x:Class="Multi_document_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multi_document_editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Создать" Click="CreateDocument_Click"/>
                <MenuItem Header="_Открыть" Click="OpenDocument_Click"/>
                <MenuItem Header="_Сохранить" Click="SaveDocument_Click"/>
                <MenuItem Header="Сохранить _как" Click="SaveDocumentAs_Click"/>
                <Separator/>
                <MenuItem Header="_Печать" Click="PrintDocument_Click"/>
                <Separator/>
                <MenuItem Header="_Закрыть" Click="CloseDocument_Click"/>
            </MenuItem>
        </Menu>
        <TabControl x:Name="DocumentsTabControl"/>
        
    </DockPanel>
</Window>
